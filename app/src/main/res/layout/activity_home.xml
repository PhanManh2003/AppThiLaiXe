<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_subtitle"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:alpha="1.0" />

        </LinearLayout>

        <!-- Main CTA Button -->
        <Button
            android:id="@+id/btn_start_exam"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:minWidth="280dp"
            android:text="@string/start_exam"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary_blue"
            android:textColor="@color/white"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Benefits Section Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/why_choose_us"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_margin="16dp" />

        <!-- Benefits Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Benefit 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/benefit_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_questions"
                    android:contentDescription="@string/benefit_questions"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="16dp"
                    tools:ignore="ImageContrastCheck" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/benefit_questions"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/benefit_questions_desc"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Benefit 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/benefit_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_timer"
                    android:contentDescription="@string/benefit_timer"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="16dp"
                    tools:ignore="ImageContrastCheck" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/benefit_timer"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/benefit_timer_desc"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Benefit 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/benefit_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/benefit_stats"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_stats" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/benefit_stats"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/benefit_stats_desc"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Benefit 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/benefit_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_offline"
                    android:contentDescription="@string/benefit_offline"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/benefit_offline"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/benefit_offline_desc"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Stats Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_gray"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stat_questions"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stat_questions_label"
                    android:textSize="14sp"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stat_success_rate"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stat_success_rate_label"
                    android:textSize="14sp"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stat_users"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stat_users_label"
                    android:textSize="14sp"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Bottom CTA -->
        <Button
            android:id="@+id/btn_learn_now"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:minWidth="280dp"
            android:text="@string/learn_now"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary_green"
            android:textColor="@color/white"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</ScrollView>

